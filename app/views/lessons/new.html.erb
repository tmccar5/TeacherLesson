<%= form_for(@lesson) do |f| %>
  <p>
    <%= f.label :date %><br>
    <%= f.text_field :date %>
  </p>
 
  <p>
    <%= f.label :exercise %><br>
    <%= f.text_area :exercise %>
  </p>

  <p>
    <%= f.label :reciever_id %><br>
    <%= f.number_field :reciever_id %>
  </p>

  <p>
    <%= label_tag 'recipients', 'Choose recipients' %></br>
    <%= select_tag 'recipients', recipients_options(@chosen_recipient), multiple: true, class: 'form-control chosen-it' %>
 </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>