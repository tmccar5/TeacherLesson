<% @lessons.each do |f| %>
    <div class="row">
      <div class="col-sm-6">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><%= f.date %></h3>
          </div>
          <div class="panel-body">
            <%= simple_format(f.exercise) %>
          </div>
        </div>
      </div>
      <div class="col-sm-6">
      <% if f.chart_content_type == 'application/pdf' %>  
        <iframe src=<%= f.chart.url(:original) %> frameborder="0"></iframe>
      <% else %>
        <%= "No Chart This Lesson" %>
      <% end %>
      </div>
    </div>
<% end %>

<%= render 'form' %>