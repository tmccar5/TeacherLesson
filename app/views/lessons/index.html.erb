<% @lessons.each do |f| %>
    <div class="row">
      <div class="col-sm-6">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><%= f.date %></h3>
          </div>
          <div class="panel-body">
            <%= simple_format(f.exercise) %>
          </div>
        </div>
      </div>
      <div class="col-sm-6">
      <% if f.chart_content_type == 'application/pdf' %>  
      <%=link_to image_tag(f.chart.url(:thumb)), f.chart.url(:original), :popup=>['original_image', 'height=700,width=900'] %>

        <!-- <iframe src=<%= f.chart.url(:original) %> frameborder="0"></iframe> -->
      <% else %>
        <%= "No Chart This Lesson" %>
      <% end %>
      </div>
    </div>
<% end %>

<% if current_user.admin? %>
  <%= form_for @lesson, :html => {:class => "form-horizontal center"} do |f| %>
  <div class="form-group">
    <div class="col-md-12">
      <%= f.label :date, class: "control-label" %>
    </div>
    <div class="col-md-2">
      <%= f.text_field :date, class: "form-control" %>
    </div>
  </div>
 
  <div class="form-group">
    <div class="col-md-12">
      <%= f.label :exercise, class: "control-label" %>
    </div>
    <div class="col-md-6">
      <%= f.text_area :exercise, class: "form-control", rows: "5"%>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-12">
      <%= f.label :reciever_id, class: "control-label" %>
    </div>
    <div class="col-md-2">
      <%= f.number_field :reciever_id, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-12">
      <%= f.label :chart, class: "control-label" %>
    </div>
    <div class="col-md-2">
      <%= f.file_field :chart, class: "form-control" %>
    </div>
  </div>

    <%= f.submit "Create Lesson", class: "btn btn-default btn-primary" %>
  <% end %>
<% end %>